{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Raw PM2.5 hourly",
  "type": "object",
  "required": ["station_id", "ts", "value", "unit"],
  "properties": {
    "station_id": { "type": "string" },
    "ts":        { "type": "string", "format": "date-time" },
    "value":     { "type": "number" },
    "unit":      { "type": "string" }
  },
  "additionalProperties": true
}
