@'
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Provider Config",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "type": { "type": "string", "enum": ["cams", "aurora", "gefs", "observations"] },
    "base_url": { "type": "string", "format": "uri" },
    "auth": {
      "type": "object",
      "properties": {
        "method": { "type": "string", "enum": ["none", "api_key", "basic", "oauth2"] },
        "env_var": { "type": "string" }
      },
      "required": ["method"],
      "additionalProperties": false
    },
    "rate_limit": {
      "type": "object",
      "properties": {
        "requests_per_min": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    }
  },
  "required": ["name", "type", "base_url"],
  "additionalProperties": true
}
'@ | Set-Content .\stage1\config\schemas\providers.json -Encoding UTF8