{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["city", "timezone", "stations", "holidays"],
  "properties": {
    "city": {"type": "string"},
    "timezone": {"type": "string"},
    "stations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id","name"],
        "properties": {
          "id":   {"type": "string"},
          "name": {"type": "string"}
        }
      }
    },
    "holidays": {"type": "string"},
    "tiles": {"type": "string"}
  }
}
