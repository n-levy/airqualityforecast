{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["name", "timezone", "providers", "bounds"],
  "properties": {
    "name": {"type": "string"},
    "timezone": {"type": "string"},
    "providers": {
      "type": "array",
      "items": {"type": "string", "enum": ["cams", "aurora", "gefs_aerosol"]}
    },
    "holidays_calendar": {"type": "string"},
    "bounds": {
      "type": "object",
      "required": ["lat_min", "lat_max", "lon_min", "lon_max"],
      "properties": {
        "lat_min": {"type": "number"},
        "lat_max": {"type": "number"},
        "lon_min": {"type": "number"},
        "lon_max": {"type": "number"}
      }
    },
    "stations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"}
        }
      }
    }
  },
  "additionalProperties": true
}
